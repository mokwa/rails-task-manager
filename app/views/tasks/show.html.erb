<div class="container center">
  <h1><%= @task.title %></h1>
  <div>
    <p><%= @task.details %></p>
  </div>
  <div>
    <% if @task.completed == true %>
        <p><input id="completed" checked="checked" type="checkbox">This task is completed</p>
      <% else %>
        <p><input id="completed" type="checkbox">This task is not completed yet!</p>

      <% end%>
  </div>

  <%= link_to "Edit", edit_task_path(@task) %>
  <%= link_to "Back to the list", tasks_path %>
  <%= link_to 'Delete', delete_task_path(@task), method: :delete, data: {confirm: 'Are you sure?'}  %>
</div>




